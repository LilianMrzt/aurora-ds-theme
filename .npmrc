# npm security configuration

# Allow install scripts (set to true to block for supply chain attack prevention)
ignore-scripts=false

# Require exact lockfile version
package-lock=true

# Automatic audit on every install
audit=true

# Minimum audit level
audit-level=moderate

# Disable funding messages
fund=false

# Don't save exact versions by default
save-exact=false

# Strict engine - refuse install if Node version doesn't match
engine-strict=true

# Peer dependencies resolution
legacy-peer-deps=false
